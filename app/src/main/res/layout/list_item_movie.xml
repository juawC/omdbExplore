<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sides_padding">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_img_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:minWidth="68dp"
            android:scaleType="centerCrop"
            android:src="@color/color_place_holder" />

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/sides_padding"
            android:layout_toRightOf="@+id/thumbnail"
            android:maxLines="1"
            tools:text="Stranger things" />

        <TextView
            android:id="@+id/year"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="@dimen/sides_padding"
            android:layout_toRightOf="@+id/thumbnail"
            android:maxLines="1"
            tools:text="2016" />

    </RelativeLayout>
</android.support.v7.widget.CardView>