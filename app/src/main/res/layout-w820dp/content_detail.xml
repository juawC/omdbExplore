<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="800dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="@dimen/detail_body_bottom_margin"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/sides_padding">

        <TextView
            android:id="@+id/movie_title"
            style="@style/textAppearanceTitle"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            tools:text="Title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"
                android:text="@string/imdb_score" />

            <TextView
                android:id="@+id/imdb_score"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10/10" />
        </LinearLayout>


        <TextView
            android:id="@+id/plot"
            style="@style/textAppearanceBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:paddingBottom="@dimen/detail_body_bottom_margin"
            tools:text="Extremely complex and super long plot... (more text will be added soon)" />
    </LinearLayout>


</android.support.v7.widget.CardView>